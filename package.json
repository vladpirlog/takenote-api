        "@types/nanoid": "^2.1.0",
        "@types/node": "^14.14.5",
        "@types/nodemailer": "^6.4.0",
        "@types/qrcode": "^1.3.5",
        "@types/redis": "^2.8.28",
        "@types/speakeasy": "^2.0.5",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "babel-jest": "^26.6.1",
        "eslint": "^7.12.1",
