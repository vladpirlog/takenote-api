        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "ffmpeg": "0.0.4",
        "helmet": "^3.23.3",
        "hpp": "^0.2.3",
        "http-errors": "^1.8.0",
        "joi": "^17.3.0",
        "moesif-nodejs": "^3.1.5",
        "mongoose": "^5.11.18",
        "morgan": "~1.9.1",
        "multer": "^1.4.2",
        "nanoid": "^3.1.31",
