{
    "name": "takenote-api",
    "author": "Vlad Pirlog",
    "description": "The REST API of a note-taking application.",
    "keywords": [
        "node",
        "express",
        "mongodb",
        "typescript",
        "jest"
    ],
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc -p .",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix",
        "start": "pm2 start ./dist/bin/www.js --name api-server",
        "stop": "pm2 stop api-server && pm2 delete api-server && rimraf dist",
        "start:dev": "tsc -w -p . & nodemon ./dist/bin/www.js",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@google-cloud/storage": "^5.5.0",
