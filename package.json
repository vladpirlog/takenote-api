{
  "name": "takenote-api",
  "author": "Vlad Pirlog",
  "description": "The REST API of serving the takenote front-end.",
  "keywords": [
    "node",
    "express",
    "mongodb",
    "typescript",
    "jest"
  ],
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p .",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "start": "pm2 start ./dist/bin/www.js --name api-server",
    "stop": "pm2 stop api-server && pm2 delete api-server && rimraf dist",
    "start:dev": "tsc -w -p . & nodemon ./dist/bin/www.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "cloudinary": "^1.20.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "helmet": "^3.23.0",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.4",
    "morgan": "~1.9.1",
    "nanoid": "^3.1.10",
    "nodemailer": "^6.4.10",
    "pm2": "^4.4.0",
    "redis": "^3.0.2",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@shelf/jest-mongodb": "^1.1.5",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/express-fileupload": "^1.1.3",
    "@types/helmet": "0.0.47",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.25",
    "@types/mongoose": "^5.7.21",
    "@types/morgan": "^1.9.0",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^14.0.5",
    "@types/nodemailer": "^6.4.0",
    "@types/redis": "^2.8.22",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "babel-jest": "^26.0.1",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "typescript": "^3.9.3"
  },
  "engines": {
    "node": "10.x"
  }
}
