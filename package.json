{
    "name": "takenote-api",
    "author": "Vlad Pirlog",
    "description": "The REST API of serving the takenote front-end.",
    "keywords": [
        "node",
        "express",
        "mongodb",
        "typescript",
        "jest"
    ],
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc -p .",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix",
        "start": "pm2 start ./dist/bin/www.js --name api-server",
        "stop": "pm2 stop api-server && pm2 delete api-server && rimraf dist",
        "start:dev": "tsc -w -p . & nodemon ./dist/bin/www.js",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@google-cloud/storage": "^5.3.0",
        "axios": "^0.20.0",
        "bcrypt": "^5.0.0",
        "cloudinary": "^1.23.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "debug": "^4.2.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-fileupload": "^1.2.0",
        "helmet": "^3.23.3",
        "hpp": "^0.2.3",
        "http-errors": "^1.8.0",
        "joi": "^17.3.0",
        "jsonwebtoken": "^8.5.1",
        "moesif-nodejs": "^3.1.5",
        "mongoose": "^5.10.11",
        "morgan": "~1.9.1",
        "nanoid": "^3.1.16",
        "nodemailer": "^6.4.14",
        "pm2": "^4.5.0",
        "qrcode": "^1.4.4",
        "redis": "^3.0.2",
        "rimraf": "^3.0.2",
        "speakeasy": "^2.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-typescript": "^7.12.1",
        "@shelf/jest-mongodb": "^1.2.3",
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "^1.7.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.8",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.8",
        "@types/express-fileupload": "^1.1.5",
        "@types/helmet": "0.0.47",
        "@types/hpp": "^0.2.1",
        "@types/http-errors": "^1.8.0",
        "@types/jest": "^25.2.3",
